<menu>
  <%= link_to root_path, :id => 'logo' do %>
    <%= image_tag 'logo.png', :alt => "Budget 24-7" %>
  <% end %>
  <div class="user-menu-wrapper">
    <% if user_signed_in? %>
      <ul class="user-menu">
        <li><%= link_to "Dashboard", root_path %></li>
        <li><%= link_to "Accounts", accounts_path %></li>
        <li><%= link_to "Budgets", budgets_path %></li>
        <li><%= link_to "Goals", goals_path %></li>
        <li><%= link_to "Profile", current_user %></li>
        <li><%= link_to "Help", '#' %></li>
        <li><%= acumen_test_menu(current_user) %></li>
        <li><%= link_to "Sign out", destroy_user_session_path,
                :method => :delete, :class => 'sign_out' %></li>
      </ul>

    <% else %>
      <ul class="user-menu">
        <li><%= link_to "Sign in", user_session_path %></li>
        <li><i>or</i></li>
        <li><%= link_to "Sign up", new_user_registration_path %></li>
      </ul>
    <% end %>
  </div>
</menu>
