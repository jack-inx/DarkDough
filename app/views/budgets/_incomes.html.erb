<div id="incomes">
  <h3>Income</h3>
  <div class="amount">
    <div class="sum">
      <div class="cur">$</div><%= current_user.transactions_sum_by_category("Income") %>
    </div>
    so far of
    <div class="sum">
      <div class="cur">$</div><%= @income_budgets.map(&:amount).sum %>
    </div>
  </div>

  <%= link_to "Create a new income", new_budget_path(:category => 'Income'), :class => "new-budget", :title => "New budget" %>
  <div id="create_new_budget">
    <%= render 'form' %>
  </div>

  <% if @income_budgets.any? %>
    <div id="incomes-list">
      <% @income_budgets.each do |income| %>
        <div class="income item">
          Income <%= link_to "edit", edit_budget_path(income, :category => income.category), :class => "edit" %>
          <div class="spent">
            <div class="b-start">
              $<div class="start"><%= current_user.transactions_sum_by_category("Income") %></div>
            </div> &nbsp;&nbsp;of&nbsp;&nbsp;
            <div class="b-end">
              $<div class="end"><%= @income_budgets.map(&:amount).sum %></div>
            </div>
          </div>
          <div class="progress"></div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
