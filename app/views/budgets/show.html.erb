<h1>Budget</h1>

<p>
  <b>Category:</b>
  <%= @budget.category %>
</p>

<p>
  <b>Amount:</b>
  <%= @budget.amount %>
</p>

<p>
  <b>Period:</b>
  <%= @budget.period %>
</p>

<% if @budget.start %>
  <p>
    <b>Started at:</b>
    <%= @budget.start.strftime("%b %d") %>
  </p>
<% end %>


<%= link_to 'Edit', edit_budget_path(@budget) %> |
<%= link_to 'Back', list_budgets_path %>
