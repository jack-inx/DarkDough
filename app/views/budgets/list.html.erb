<div class="block">
  <h1>Listing budgets</h1>

  <table>
    <tr>
      <th>Category</th>
      <th>Amount</th>
      <th>Period</th>
      <th>Start</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @budgets.each do |budget| %>
    <tr>
      <td><%= budget.category %></td>
      <td><%= budget.amount %></td>
      <td><%= budget.period %></td>
      <td><%= budget.start.strftime("%b %d") if budget.start %></td>
      <td><%= link_to 'Show', budget %></td>
      <td><%= link_to 'Edit', edit_budget_path(budget, :category => budget.category) %></td>
      <td><%= link_to 'Destroy', budget, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
  </table>

  <br />
  <%= link_to "Create new Budget", new_budget_path %>
  <br />
  <%= link_to "back to budgets page", budgets_path %>
</div>
