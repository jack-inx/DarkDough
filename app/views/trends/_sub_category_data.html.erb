<div class="spending_container bubble-info active">
  <table>
    <thead>
      <tr>
        <th>Category</th>
        <th>Spending</th>
      </tr>
    </thead>
    <tbody>
      <% categorized_spending(@spending_transactions).each do |spending| %>
        <tr>
          <td><%= spending[0] %></td>
          <td>$<%= spending[1] %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td>Total</td>
        <td>$<%= @spending_amount %></td>
      </tr>
    </tfoot>
  </table>
</div>

<div class="income_container bubble-info">
  <table>
    <thead>
      <tr>
        <th>Category</th>
        <th>Income</th>
      </tr>
    </thead>
    <tbody>
      <% categorized_income(@income_transactions).each do |key, val| %>
        <tr>
          <td><%= key %></td>
          <td>$<%= @income_amount %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <td>Total</td>
        <td>$<%= @income_amount %></td>
      </tr>
    </tfoot>
  </table>
</div>

<div class="net_income_container bubble-info">
  <table>
    <thead>
      <tr>
        <th>Month</th>
        <th>Income</th>
        <th>Spendint</th>
        <th>Net</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <!--
          TODO set month
        -->
        <td>Month</td>
        <td>$<%= @income_amount %></td>
        <td>$<%= @spending_amount %></td>
        <td>$<%= @income_amount - @spending_amount %></td>
      </tr>
    </tbody>
    <tfoot>
      <tr>
        <td>Total</td>
        <td>$<%= @income_amount %></td>
        <td>$<%= @spending_amount %></td>
        <td>$<%= @income_amount - @spending_amount %></td>
      </tr>
    </tfoot>
  </table>
</div>
