<h1>Trends</h1>

<div class="block" id="trends">
  <div id="trends_calendar">
    <div id="period">November - December, 2011</div>
    <div class="predefined">
      <%= link_to "This month", '#' %>
      <%= link_to "Last month", '#' %>
      <%= link_to "This year", '#' %>
      <%= link_to "All time", '#' %>
    </div>
    <div id="calendar">
      <%= image_tag "calendar(remove).png", :style => "width:920px;" %>
    </div>
  </div>

  <div id="graph">
    <!--
      TODO change word 'category' with JS on the selected word
    -->
    <h4>Spending by <span id="spend_by">category</span></h4>
    <menu>
      <ul id="main_filter">
        <li><%= link_to "Spending", '#' %></li>
        <li><%= link_to "Income", '#' %></li>
        <li><%= link_to "Net income", '#' %></li>
        <li><%= link_to "Assets", '#' %></li>
        <li><%= link_to "Debts", '#' %></li>
        <li><%= link_to "Net worth", '#' %></li>
      </ul>
      <ul id="sub_filter">
        <li><%= link_to "Over Time", '#' %></li>
        <li><%= link_to "By Category", '#' %></li>
        <li><%= link_to "By Merchant", '#' %></li>
        <li><%= link_to "By Tag", '#' %></li>
      </ul>
    </menu>
  </div>
</div>