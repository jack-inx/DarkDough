<%= form_for(@goal) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>

  <div class="field">
    <%= f.label :title, "Give it a title" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :category, "Choose a category" %><br />
    <%= f.select :category, Goal::GOAL_CATEGORIES %>
  </div>
  <div class="field">
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <% for account in Account.find(:all) do %>
    <div>
      <%= check_box_tag "goal[account_ids][]", account.id, @goal.accounts.include?(account) %>
      <%= account.name %>
    </div>
    <% end %>
  </div>
  <div class="field">
    Your available balance is:
    <span id="goal_current_balance">
      <%= current_user.accounts.first.amount %>
    </span>
    </div>
  <div class="field">
    <%= f.label :planned_date %><br />
    <%= f.date_select :planned_date, :discard_day => true, :start_year => Date.today.year.next %>
  </div>
  <div class="field">
    <%= f.label :contribution, "Your monthly contribution" %><br />
    <%= f.text_field :contribution %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
