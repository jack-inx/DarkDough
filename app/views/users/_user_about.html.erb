<div class="block right tabbed about active">
  <h4>About you</h4>

  <dl class="item_1 edited-item">
    <dt>First name</dt>
    <dd class="activated">
      <%= current_user.first_name %>
    </dd>
    <dd><%= link_to 'Edit', '#', :class => "edit", :title => "Edit" %></dd>
    <%= form_for current_user, :remote => true do |f| -%>
      <%= f.text_field :first_name %>
      <div class="buttons">
        <%= f.submit "Save" %>
        <%= link_to "Cancel", '#', :class => "item_1 cancel" %>
      </div>
    <% end -%>
  </dl>

  <dl class="item_2 edited-item">
    <dt>Last name</dt>
    <dd class="activated">
      <%= current_user.last_name %>
    </dd>
    <dd><%= link_to 'Edit', '#', :class => "edit", :title => "Edit" %></dd>
    <%= form_for current_user do |f| -%>
      <%= f.text_field :last_name %>
      <div class="buttons">
        <%= f.submit "Save" %>
        <%= link_to "Cancel", '#', :class => 'item_2 cancel' %>
      </div>
    <% end -%>
  </dl>

  <dl class="item_3 edited-item">
    <dt>Age</dt>
    <dd class="<%= activated_if(current_user.age) %>">
      <%= current_user.age ? current_user.age : 'You don\'t specified age yet' %>
    </dd>
    <dd><%= link_to 'Edit', '#', :class => "edit", :title => "Edit" %></dd>
    <%= form_for current_user do |f| -%>
      <%= f.text_field :age %>
      <div class="buttons">
        <%= f.submit "Save" %>
        <%= link_to "Cancel", '#', :class => 'item_3 cancel' %>
      </div>
    <% end -%>
  </dl>

  <dl class="item_4 edited-item">
    <dt>Gender</dt>
    <dd class="<%= activated_if(current_user.gender) %>">
      <%= current_user.gender ? current_user.gender : 'You don\'t specified gender yet' %>
    </dd>
    <dd><%= link_to 'Edit', '#', :class => "edit", :title => "Edit" %></dd>
    <%= form_for current_user do |f| -%>
      <%= f.select :gender, User::GENDERS %>
      <div class="buttons">
        <%= f.submit "Save" %>
        <%= link_to "Cancel", '#', :class => 'item_4 cancel' %>
      </div>
    <% end -%>
  </dl>

  <dl class="item_5 edited-item">
    <dt>Avatar</dt>
    <dd><%= File.basename(current_user.avatar.url) %></dd>
    <dd><%= link_to 'Edit', '#', :class => "edit", :title => "Edit" %></dd>
    <%= form_for current_user, :html => { :mulitpart => true } do |f| -%>
      <%= f.file_field :avatar %>
      <div class="buttons">
        <%= f.submit "Save" %>
        <%= link_to "Cancel", '#', :class => 'item_3 cancel' %>
      </div>
    <% end -%>
  </dl>

  <dl class="edited-item">
    <dt>Marital status</dt>
    <dd></dd>
    <dd><%#= link_to 'Edit', '#', :class => "edit", :title => "Edit" %></dd>
  </dl>
  <dl class="edited-item">
    <dt>Education level</dt>
    <dd></dd>
    <dd><%#= link_to 'Edit', '#', :class => "edit", :title => "Edit" %></dd>
  </dl>
  <dl class="edited-item">
    <dt>Profession</dt>
    <dd></dd>
    <dd><%#= link_to 'Edit', '#', :class => "edit", :title => "Edit" %></dd>
  </dl>

  <h4>Your household</h4>
  <dl>
    <dt>Income range</dt>
    <dd></dd>
    <dd>
      <%#= link_to 'Edit', '#', :class => "edit", :title => "Edit" %>
    </dd>
  </dl>
  <dl class="edited-item">
    <dt>Post code</dt>
    <dd></dd>
    <dd><%#= link_to 'Edit', '#', :class => "edit", :title => "Edit" %></dd>
  </dl>

  <dl class="item_5 edited-item">
    <dt>Country</dt>
    <dd class="<%= activated_if(current_user.country) %>">
      <%= current_user.country ? current_user.country : 'You don\'t specified country yet' %>
    </dd>
    <dd>
      <%= link_to 'Edit', '#', :class => "edit", :title => "Edit" %>
    </dd>
    <%= form_for current_user do |f| -%>
      <%= f.select :country, Carmen::country_names %>
      <div class="buttons">
        <%= f.submit "Save" %>
        <%= link_to "Cancel", '#', :class => 'item_5 cancel' %>
      </div>
    <% end -%>
  </dl>

  <dl class="edited-item">
    <dt>Residential status</dt>
    <dd></dd>
    <dd>
      <%#= link_to 'Edit', '#', :class => "edit", :title => "Edit" %>
    </dd>
  </dl>
  <dl class="edited-item">
    <dt>Household size</dt>
    <dd></dd>
    <dd>
      <%#= link_to 'Edit', '#', :class => "edit", :title => "Edit" %>
    </dd>
  </dl>
</div>
