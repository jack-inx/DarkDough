<div class="block right tabbed settings">
  <h4>General account settings</h4>
  <dl>
    <dt>Primary email</dt>
    <dd><%= current_user.email %></dd>
    <dd><%= link_to 'Edit', '#', :class => "edit" %></dd>
    <%= form_for current_user do |f| -%>
      <%= f.email_field :email %>
      <div class="buttons">
        <%= f.submit "Save" %>
        <%= link_to "Cancel", '#', :class => 'cancel' %>
      </div>
    <% end -%>
  </dl>
  <dl>
    <dt>Secondary email</dt>
    <dd></dd>
    <dd><%#= link_to 'Edit', '#', :class => "edit" %></dd>
  </dl>
  <dl>
    <dt>Password</dt>
    <dd></dd>
    <dd><%#= link_to 'Edit', '#', :class => "edit" %></dd>
  </dl>
  <dl>
    <dt>Username</dt>
    <dd></dd>
    <dd><%#= link_to 'Edit', '#', :class => "edit" %></dd>
  </dl>
</div>
