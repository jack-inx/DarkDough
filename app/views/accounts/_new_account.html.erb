<div id="overlay"></div>
<div class="dialog-block">
  <%= link_to "Cancel", '#', :class => "dialog-cancel" %>
  <h3>Add new account</h3>
  <div id="dialog-content">
    <h5>Find your bank</h5>
    <span>Enter your bank's name</span>
    <div class="bank-search">
      <%= text_field_tag :bank, {}, :id => "search-input" %>
      <%= link_to '#', :class => "search-link" do %>
        <i></i>
      <% end %>
      <div id="banks-list-wrapper">
        <div id="banks-list"><%= @banks.join(',') %></div>
        <%= link_to "clear bank", '#', :class => 'clear-bank' %>
      </div>
    </div>
    <span>
      Examples:
      <%= link_to "Bank of America", '#' %>,
      <%= link_to "FSA Direct Loans", '#' %>
    </span>

    <div id="banks">
      <h5>Or choose from these popular banks</h5>
      <% Bank.all.each_with_index do |bank, index| %>
        <div class="popular-bank">
          <span>
            <%= index + 1 %>.
          </span>
          <%= link_to bank.name, '#' %><br />
        </div>
      <% end %>
    </div>
  </div>
</div>
